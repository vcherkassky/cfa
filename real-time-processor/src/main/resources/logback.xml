<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5.5level|%-40.40logger{0}|%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.cfa.message" level="debug"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>